CREATE TABLE INNER_JOIN_AV
as
SELECT CRITICAL_VS_APS.CI_NAME, CRITICAL_VS_APS.DATE_RAISED, CRITICAL_VS_APS.DATE_CLOSED, MAPPING.SERVICE
FROM CRITICAL_VS_APS
INNER JOIN MAPPING
ON CRITICAL_VS_APS.CI_NAME = MAPPING.APPLICATION;